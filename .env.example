# MailIt Environment Variables
# Copy to .env and edit before running

# Database
POSTGRES_USER=mailit
POSTGRES_PASSWORD=changeme
POSTGRES_DB=mailit
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=

# Auth
JWT_SECRET=changeme-generate-a-random-string
API_KEY_PREFIX=re_

# SMTP
MAILIT_DOMAIN=mail.example.com
MAILIT_HOSTNAME=mail.example.com
SMTP_LISTEN_ADDR=:25
SMTP_SUBMISSION_ADDR=:587

# DKIM
DKIM_SELECTOR=mailit
DKIM_MASTER_KEY=changeme-32-byte-hex-key

# Server
HTTP_ADDR=:8080
LOG_LEVEL=info

# Next.js Dashboard
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXTAUTH_SECRET=changeme-generate-a-random-string
NEXTAUTH_URL=http://localhost:3000
